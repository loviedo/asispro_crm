                    <th>IVA 5%</th>
                    <th>GASTO REAL</th>
                    <th>CONCEPTO</th> 
                    <th>PROVEEDOR</th> 
                </tr>
            </thead>
        <tbody>
        <% if(deta_cajas) { %>
            <% deta_cajas.forEach(function(caja){ %>
            <tr>
                <td><%= formatear_fecha(caja.fecha) %></td>
                <td><%= caja.fact_condicion %></td>
                <td><%= caja.monto %></td>
                <td><%= caja.exentas %></td>
                <td><%= caja.iva_10 %></td>
                <td><%= caja.iva_5 %></td>
                <td><%= caja.gasto_real %></td>
                <td><%= caja.concepto %></td>
                <td><%= caja.proveedor %></td>
            </tr>
            <% }) %>
        <% } %>
        </tbody>
    </table>
</div>
