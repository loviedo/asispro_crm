}
</style>


<!-- FORMA VIEJA -->
<div class="container-fluid" style="height: 500px; overflow-y: auto;" width="100%">
    <table class="table-striped table-bordered table-sm" cellspacing="0" width="100%">
            <thead style="background: rgb(137, 151, 212); border-left: 1px solid #EB8; border-right: 1px solid #B74;
            border-top: 1px solid #EB8; font-weight: normal; padding: 4px 3px;">
                <tr>
                    <th>FECHA</th>
                    <th>MONTO</th>
                    <th>EXENTAS</th>
                    <th>IVA 10%</th>
                    <th>IVA 5%</th>
                    <th>GASTO REAL</th>
                    <th>CONCEPTO</th>
                    <th>ESTADO FACTURACION</th>
                    <th>PROVEEDOR</th>       
                    <th>FACTURA NRO</th>
                    <th>ENCARGADO</th>
                    <th>CODIGO</th>
                    <th>NRO OT</th> 
                    <th>ACCIONES</th>            
                </tr>
            </thead>
        <tbody>
        <% if (data) { %>
        <% data.forEach(function(gasto){ %>
            <tr>
                <td><%= formatear_fecha(gasto.fecha) %></td>
                <td><%= gasto.monto %></td>
                <td><%= gasto.exentas %></td>
                <td><%= gasto.iva_10 %></td>
                <td><%= gasto.iva_5 %></td>
                <td><%= gasto.gasto_real %></td>
                <td><%= gasto.concepto %></td>
                <td><%= gasto.fact_estado %></td>
                <td><%= gasto.proveedor %></td>
                <td><%= gasto.fact_nro %></td>
                <td><%= gasto.encargado %></td>
                <td><%= gasto.codigo %></td>
                <td><%= gasto.ot_nro %></td>
                <td>
                    <div>
                        <a href='/gastos/editar/<%= gasto.id %>'>Editar</a> &nbsp;                            
                        <form method="post" action="/gastos/eliminar/<%= gasto.id %>" style="float:right">
                            <input type="submit" name="delete" value='Delete' onClick="return confirm('Seguro que desea borrar la factura?')" />
                            <input type="hidden" name="_method" value="DELETE" />
                        </form>
                    </div>
                </td>
            </tr>
            <% }) %>
            <% } %>
        </tbody>

    </table>
</div>
