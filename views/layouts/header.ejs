        <!--ESTILO DEL HEADER-->
        <style>
            * {box-sizing: border-box;}
            
            body { 
                margin: 0;
                font-family: Arial;
            }
            .header {
                overflow: hidden;
                background-color: #6c81a8;
                padding: 10px 10px; 
            }
            .header a {
                float: left;
                color: black;
                text-align: center;
                padding: 10px;
                text-decoration: none;
                font-size: 18px; 
                line-height: 10px;
                border-radius: 4px;
            }
            
            .header a.logo {
                font-size: 15px;
                font-weight: bold;
            }
            
            .header a:hover {
                background-color: #ddd;
                color: black;
            }
            
            .header a.active {
                background-color: dodgerblue;
                color: white;
            }
            
            .header-right {
                float: right;
            }
            
            @media screen and (max-width: 500px) {
                .header a {
                float: none;
                display: block;
                text-align: left;
                }
                .header-right {
                float: none;
                }
            }
        </style>


