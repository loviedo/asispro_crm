<html>
    <head>
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <style>
            * {box-sizing: border-box;}
            
            body { 
                margin: 0;
                font-family: Arial;
            }
            .header {
                overflow: hidden;
                background-color: #6c81a8;
                padding: 20px 10px;
            }
            .header a {
                float: left;
                color: black;
                text-align: center;
                padding: 12px;
                text-decoration: none;
                font-size: 18px; 
                line-height: 25px;
                border-radius: 4px;
            }
            
            .header a.logo {
                font-size: 15px;
                font-weight: bold;
            }
            
            .header a:hover {
                background-color: #ddd;
                color: black;
            }
            
            .header a.active {
                background-color: dodgerblue;
                color: white;
            }
            
            .header-right {
                float: right;
            }
            
            @media screen and (max-width: 500px) {
                .header a {
                float: none;
                display: block;
                text-align: left;
                }
                .header-right {
                float: none;
                }
            }
        </style>

        <!-- 4 lineas de estilo para los logins de usuario -->
        <meta charset="UTF-8">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"/>
        <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>

    </head>
    <title><%= title %></title>
    <body>
            <div class="header">
                <!--<img class="logo" src="/img/logo.png" alt="ASISPRO">-->
                <div class="header-left"> 
                <% if (usuario.length > 0) { %>
                    <a href="/">Home</a>
                    <a href="/facturas/add">Agregar Factura</a>
                    <a href="/facturas">Listar Facturas</a>
                <% } %>
                </div>
                <% if (usuario.length <= 0) { %>
                    <div class="header-right">
                        <a href="/login">ingresar</a>
                        <a href="/signup">Registrarse</a>
                    </div>
                <% } %>
            </div> 

            <div style="padding-left:20px">
                <h1><%= title %></h1>
            </div>
    </body>
</html>

