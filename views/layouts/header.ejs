<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <style>
            * {box-sizing: border-box;}
            
            body { 
                margin: 0;
                font-family: Arial;
            }
            .header {
                overflow: hidden;
                background-color: #6c81a8;
                padding: 10px 10px; 
            }
            .header a {
                float: left;
                color: black;
                text-align: center;
                padding: 10px;
                text-decoration: none;
                font-size: 18px; 
                line-height: 10px;
                border-radius: 4px;
            }
            
            .header a.logo {
                font-size: 15px;
                font-weight: bold;
            }
            
            .header a:hover {
                background-color: #ddd;
                color: black;
            }
            
            .header a.active {
                background-color: dodgerblue;
                color: white;
            }
            
            .header-right {
                float: right;
            }
            
            @media screen and (max-width: 500px) {
                .header a {
                float: none;
                display: block;
                text-align: left;
                }
                .header-right {
                float: none;
                }
            }
        </style>

        <!-- 4 lineas de estilo para los logins de usuario -->
        <meta charset="UTF-8">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"/>
        <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>

    </head>
    <title><%= title %></title>
    <body>
        <div class="header">
            <!--<img class="logo" src="/img/logo.png" alt="ASISPRO">-->
            <% if (usuario.length > 0) { %>
                <div class="header-left"> 
                    <a href="/">
                        <span class="glyphicon glyphicon-home"></span>
                        Home
                    </a>
                    <!--<a href="/facturas/add">Agregar Factura</a>
                    <a href="/facturas">Listar Facturas</a>-->
                </div>
                <div class="header-right">
                    <a href="#">
                        <span class="glyphicon glyphicon-user"></span>
                        <%= usuario %>
                    </a>
                    <a href="/logout">
                        <span class="glyphicon glyphicon-log-out"></span>
                        salir
                    </a>
                </div>
            <% } %>
            <% if (usuario.length <= 0) { %>
                <div class="header-right">
                    <a href="/login">
                        <span class="glyphicon glyphicon-log-in"></span>
                        ingresar</a>
                    <!--<a href="/signup">Registrarse</a>--><!-- por ahora no colocamos esto a pesar de estar funcional-->
                </div>
            <% } %>
        </div> 

    </body>
</html>

